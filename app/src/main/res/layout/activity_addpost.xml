<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addpost">

    <!-- Top bar to go back -->


    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#9C6A6A"
            android:fontFamily="@font/ralewaybold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#9C6A6A"
            android:text="Recents"
            android:textSize="18sp"
            android:fontFamily="@font/ralewaybold" />

        <TextView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ralewaybold"
            android:gravity="center"
            android:textColor="#9C6A6A"
            android:text="Next"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Main photo frame -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/photolikes"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="420dp"
            android:layout_gravity="center"
            android:src="@drawable/post" />
    </LinearLayout>

    <!-- Main gallery view -->

    <GridLayout
        android:id="@+id/postGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/photolikes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post3" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post4" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post5" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post6" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post7" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post8" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post9" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/post3" />

    </GridLayout>

    <!-- Bottom bar -->


    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/library"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Library"
            android:textColor="#9C6A6A"
            android:fontFamily="@font/ralewaybold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#9C6A6A"
            android:text="Photo"
            android:textSize="18sp"
            android:fontFamily="@font/ralewaybold" />

        <TextView
            android:id="@+id/video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ralewaybold"
            android:gravity="center"
            android:textColor="#9C6A6A"
            android:text="Video"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>