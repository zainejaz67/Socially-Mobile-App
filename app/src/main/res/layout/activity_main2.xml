<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9B5A5A"
    tools:context=".MainActivity2">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topSectionGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />

    <TextView
        android:id="@+id/socially"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:fontFamily="@font/ralewaybold"
        android:background="@color/white"
        android:backgroundTint="#9B5A5A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:rotation="180"
        android:translationX="30dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/socially"
        app:layout_constraintBottom_toBottomOf="@id/socially" />

    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Account and Sign up"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:fontFamily="@font/ralewaybold"
        android:background="@color/white"
        android:backgroundTint="#9B5A5A"
        android:translationY="15dp"
        app:layout_constraintStart_toStartOf="@+id/socially"
        app:layout_constraintEnd_toEndOf="@+id/socially"
        app:layout_constraintBaseline_toBottomOf="@id/socially" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/signupimagecircle"
        android:scaleType="centerInside"
        android:src="@drawable/signupimage"
        app:layout_constraintStart_toStartOf="@+id/line"
        app:layout_constraintEnd_toEndOf="@+id/line"
        app:layout_constraintTop_toTopOf="@id/line"
        app:layout_constraintHorizontal_bias="0.477" />

    <LinearLayout
        android:id="@+id/signup_section"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topSectionGuide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/white"
            android:fontFamily="@font/ralewaybold"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textColor="@color/white"
            android:fontFamily="@font/ralewaybold"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Last Name"
            android:textColor="@color/white"
            android:textColorHint="#BCA6A6"
            android:fontFamily="@font/ralewaybold"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textColor="@color/white"
            android:fontFamily="@font/ralewaybold"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="@color/white"
            android:fontFamily="@font/ralewaybold"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/white"
            android:fontFamily="@font/ralewaybold"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Create an Account"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/signupbuttonid"
            android:background="@drawable/signupbutton"
            android:fontFamily="@font/ralewaybold"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
